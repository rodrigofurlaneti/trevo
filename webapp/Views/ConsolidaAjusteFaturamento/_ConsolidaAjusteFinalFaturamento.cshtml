@using Core.Extensions
@using Entidade
@using Entidade.Uteis
@using Portal.Controllers

@model ConsolidaAjusteFaturamentoViewModel

@{

    var controller = ViewContext.Controller as ConsolidaAjusteFaturamentoController;
}


<div id="conteudo" class="row margin-bottom-5">
    <div class="col-xs-12 no-padding margin-bottom-10">

        <div class="col-xs-12 col-sm-12">
            <div id="divDespesa">
                <div class="col-lg-12 table">
                    <div class="col-xs-12">
                        <table id="tbConsolidaAjusteFinalFaturamento">
                            <thead>
                                <tr>
                                    <th style="width: 20%;">Despesa Final (R$)</th>
                                    <th style="width: 20%;">Faturamento Final (R$)</th>
                                    <th style="width: 20%;">Diferença (R$)</th>
                                    <th style="width: 10%;">Ajuste Faturamento Final (R$)</th>
                                </tr>
                            </thead>
                            <tbody class="dynamicInputs">

                                <tr id="linhaConsolidaAjusteFinal">
                                    <td>
                                        @Html.TextBoxFor(x => x.ConsolidaAjusteFinalFaturamento.DespesaFinal,new {
                                          @id = "DespesaFinalAjuste",
                                          @readonly = "readonly"
                                          })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(x => x.ConsolidaAjusteFinalFaturamento.FaturamentoFinal,new {
                                         @id = "FaturamentoFinalAjuste",
                                         @readonly = "readonly"
                                         })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(x => x.ConsolidaAjusteFinalFaturamento.Diferenca,new {
                                        @id= "DiferencaAjuste",
                                        @readonly = "readonly"
                                        })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(x => x.ConsolidaAjusteFinalFaturamento.AjusteFinalFaturamento, new {
                                       @id = "AjusteFinalFaturamento",
                                       @class = "form-control heightfield valmoney",
                                       @autocomplete = "off", @maxlength = "21" })
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>


    </div>

</div>


<div class="row margin-bottom-5">
    <div class="pull-right margin-right-15">
        <a class="btn btn-lg btn-danger" href="/consolidaajustefaturamento/index"><i class="fa fa-times"></i>&nbsp;Cancelar</a>
    </div>
    <div class="pull-right margin-right-15">
        <button id="salvar" type="submit" class="btn btn-lg btn-primary"><i class="fa fa-save"></i>&nbsp;Salvar</button>
    </div>
    <div class="pull-right margin-right-15">
        <a id="btnAnteriorFaturamento" onclick="retornarAnteriorAjusteFinalFaturamento()" class="btn btn-lg btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i>&nbsp;Anterior</a>
    </div>
</div>


