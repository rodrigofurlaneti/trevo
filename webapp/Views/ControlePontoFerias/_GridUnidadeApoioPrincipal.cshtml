@using Core.Extensions;
@using Portal.Controllers;
@using Aplicacao.ViewModels;
@model List<ControlePontoFeriasUnidadeApoioViewModel>

<div class="body-grid-unidade-apoio-principal col-xs-12">
    <table id="datatable_unidadeapoio_principal" class="table table-striped table-bordered" width="100%" style="margin-top: 0px !important">
        <thead>
            <tr>
                <th style="width: 60px">Ação</th>
                <th>Data</th>
                <th>Dia da Semana</th>
                <th>Unidade</th>
                <th>Entrada Apoio</th>
                <th>Saída Apoio</th>
                <th>HE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="btn btn-primary" onclick="EditarControlePontoFeriasUnidadeApoio(@item.Unidade.Id)"><i class='fa fa-edit'></i></a>
                    </td>
                    <td>@(item.Data.ToShortDateString())</td>
                    <td>@(item.Data.ToString("dddd").ToUpper())</td>
                    <td>@(item.Unidade?.Nome)</td>
                    <td>@(item.HorarioEntrada)</td>
                    <td>@(item.HorarioSaida)</td>
                    <td>@(item.TipoHoraExtra.ToDescription())</td>
                </tr>
            }
        </tbody>
    </table>
</div>