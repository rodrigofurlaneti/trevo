@using Core.Extensions;
@model List<Aplicacao.ViewModels.BloqueioReferenciaViewModel>

@if (Model != null && Model.Any())
{
    <table id="datatable_fixed_column" class="table table-striped table-bordered margin-bottom-0" width="100%">
        <thead>
            <tr>
                <th class="hasinput" style="width: 15%">
                    <input type="text" class="form-control" placeholder="Filtrar Data de Criação" />
                </th>
                <th class="hasinput" style="width: 60%">
                    <input type="text" class="form-control" placeholder="Filtrar Referência (Ano/Mês)" />
                </th>
                <th class="hasinput" style="width: 15%">
                    <input type="text" class="form-control" placeholder="Filtrar Ativo" />
                </th>
                <th style="width: 10%">
                </th>
            </tr>
            <tr>
                <th data-hide="expand">Data de Criação</th>
                <th data-hide="expand">Referência (Ano/Mês)</th>
                <th data-hide="expand">Ativo</th>
                <th data-class="expand">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.DataInsercao.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@m.DataMesAnoReferencia.ToString("yyyy-MM")</td>
                    <td>@(m.Ativo ? "Sim" : "Não")</td>
                    <td class="text-center">
                        <a class="btn btn-primary" href="/BloqueioReferencia/edit/@m.Id"><i class='fa fa-edit'></i></a>
                        <a class="btn btn-danger" href="/BloqueioReferencia/delete/@m.Id"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
        <tr>
            <td>
                Nenhum registro foi encontrado.
            </td>
        </tr>
    </table>

}