@using Core.Extensions
@using Entidade.Uteis
@using Aplicacao.ViewModels
@using Portal.Controllers

@{
    var controller = ViewContext.Controller as VagaCortesiaController;
}

<div style="margin-top: 20px;">
    <div>
        @Html.Hidden("id")
        <fieldset>
            <section>
                <div class="col-md-12 no-padding">
                    <div class="col-md-2">
                        <label>Unidade:</label><br />
                        @Html.DropDownList("unidade", new SelectList(controller.ListaUnidade, "Id", "Nome"), "Selecione...", new { @id = "unidade", @class = "chosen-select form-control", data_placeholder = "Selecione..." })
                    </div>
                    <div class="col-md-1">
                        <label>Data inicio:</label><br />
                        @Html.TextBox("datainicio", "", new { @id = "datainicio", Value = string.Empty, @class = "form-control fieldDate" })
                    </div>
                    <div class="col-md-1">
                        <label>Horário inicio:</label><br />
                        @Html.TextBox("horarioinicio", "", new { @class = "form-control hora" })
                    </div>
                    <div class="col-md-1">
                        <label>Data fim:</label><br />
                        @Html.TextBox("datafim", "", new { @id = "datafim", Value = string.Empty, @class = "form-control fieldDate" })
                    </div>
                    <div class="col-md-1">
                        <label>Horário fim:</label><br />
                        @Html.TextBox("horariofim", "", new { @class = "form-control hora"})
                    </div>
                    <div class="col-md-2" style="top: 20px;">
                        <button type="button" class="btn btn-primary" id="add-address" onclick="adicionarItem()"><i class="fa fa-plus-circle"></i>&nbsp; Adicionar</button>
                        <button type="button" class="btn btn-danger" id="cancel" style="display:none; margin-top:2px;" onclick="cancelarEdicaoDeItem()"><i class="fa fa-minus-circle"></i>&nbsp;Cancelar Edição</button>
                    </div>
                </div>
            </section>
        </fieldset>
    </div>
</div>