@using Entidade.Uteis
@model List<ItemFuncionarioDetalheViewModel>

<div class="col-xs-12 margin-top-20" style="padding-right: 5px">
    <table id="tableitem" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th data-hide="expand" class="select-item">
                    <input type="checkbox" onChange="AltenarSelecionarTudo(this)" autocomplete="off" class="form-control center-block no-float">
                </th>
                <th>Item</th>
                <th>Estoque</th>
                <th>Quantidade</th>
                <th>Valor Total</th>
                <th style="width: 160px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr class="item">
                        <td class="select-item">
                            <div class="col-xs-12 nopadding input-group">
                                <input name="selecionalinha" type="checkbox" onChange="AlternarItemSelecionado(@item.Material.Id)" autocomplete="off" class="item-checkbox form-control center-block no-float">
                            </div>
                        </td>
                        <td>
                            @item.Material.Descricao
                        </td>
                        <td>
                            @item.EstoqueMaterial.Estoque.Nome
                        </td>
                        <td>
                            @(item.Quantidade)
                        </td>
                        <td>
                            @(decimal.Parse(item.ValorTotal).ToString("N2"))
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary" onclick="EditarFuncionarioItem(@item.EstoqueMaterial.Id)"><i class="fa fa-edit"></i></button>
                            <button type="button" class="btn btn-danger" onclick="RemoverFuncionarioItem(@item.EstoqueMaterial.Id)"><i class="fa fa-remove"></i></button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>