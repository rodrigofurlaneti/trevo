@{
    Layout = null;
}

<div>
    <input type="hidden" id="hdnIdAtividade" value="0" />

    <div class="col-xs-12 margin-top-30 no-padding">

        <div class="row margin-bottom-5">
            <div class="col-xs-4">
                <div class="col-xs-4">
                    <h3><b><u>Check-List:</u></b></h3>
                    <table id="gridAtividades" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="display:none">Id</th>
                                <th class="hasinput" style="max-width: 120px; min-width: 120px; width: 1%;" rowspan="1" colspan="1">Descricao</th>
                                <th class="hasinput" style="max-width: 60px; min-width: 60px; width: 1%;" rowspan="1" colspan="1">Ações</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <select id="atividade" class="form-control">
            <option value="0">Selecione para adicionar</option>
        </select>
    </div>
    <p><span class="btn btn-warning btn-circle" id="adiciona-atividade" onclick="AdicionaAtividade()"><i class="fa fa-plus" style="color: white"></i>&nbsp;</span></p>


</div>

