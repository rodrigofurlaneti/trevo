@using Core.Extensions;

@model List<Aplicacao.ViewModels.EmissaoSeloViewModel>

@if (Model != null && Model.Any())
{
    <!-- row -->
    <div class="row">
        <!-- NEW WIDGET START -->
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>Lista Emissões Selo</h2>
                </header>
                <!-- widget div-->
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
                            <thead>
                                <tr>
                                    <th class="hasinput" style="width: 10%">
                                        <input type="text" class="form-control" placeholder="Filtrar Cliente" />
                                    </th>
                                    <th class="hasinput" style="width: 10%">
                                        <input type="text" class="form-control" placeholder="Filtrar Unidade" />
                                    </th>
                                    <th class="hasinput" style="width: 10%">
                                        <input type="text" class="form-control" placeholder="Filtrar Data Validade" />
                                    </th>
                                    <th class="hasinput" style="width: 10%">
                                        <input type="text" class="form-control" placeholder="Filtrar Status Selo" />
                                    </th>
                                    <th class="hasinput" style="width: 10%">
                                        <input type="text" class="form-control" placeholder="Filtrar Tipo Selo" />
                                    </th>
                                    <th class="hasinput" style="width: 10%">
                                        <input type="text" class="form-control" placeholder="Filtrar Lote" />
                                    </th>
                                    <th class="hasinput" style="width: 10%">

                                    </th>
                                </tr>
                                <tr>
                                    <th data-hide="phone">Cliente</th>
                                    <th data-hide="phone">Unidade</th>
                                    <th data-hide="phone">Data Validade</th>
                                    <th data-hide="phone">Status Selo</th>
                                    <th data-hide="phone">Tipo Selo</th>
                                    <th data-hide="phone">Lote</th>
                                    <th data-hide="phone"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in Model)
                                {
                                    <tr>
                                        <td>@(m.PedidoSelo.Cliente != null ? m.PedidoSelo.Cliente.Descricao : "")</td>
                                        <td>@(m.PedidoSelo.Unidade != null ? m.PedidoSelo.Unidade.Nome : "")</td>
                                        <td>@(m.Validade != null ? m.Validade.Value.ToShortDateString() : "")</td>
                                        <td>@m.StatusSelo.ToDescription()</td>
                                        <td>@(m.PedidoSelo.TipoSelo != null ? m.PedidoSelo.TipoSelo.Nome : "")</td>
                                        <td>@m.Id.ToString().PadLeft(8, '0')</td>


                                        <td class="text-center">
                                            <div class="pull-left">
                                                @*<button type="button" id="pagar" @Disabled class="btn btn-info btn-lg" onclick="ExecutarModal(@(m.Id))">alterar validade</button>*@
                                                <button type="button" id="pagar" class="btn btn-info btn-lg" onclick="ExecutarModal(@(m.Id))">alterar</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
            <!-- end widget -->
        </article>
        <!-- WIDGET END -->
    </div>
}
else
{
    <!-- row -->
    <div class="row">
        <!-- NEW WIDGET START -->
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>Lista Emissões Selo</h2>
                </header>
                <!-- widget div-->
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
                            <tr>
                                <td align="center">
                                    Nenhum Lote foi encontrado.
                                </td>
                            </tr>
                        </table>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget div -->
            </div>
            <!-- end widget -->
        </article>
        <!-- WIDGET END -->
    </div>
}