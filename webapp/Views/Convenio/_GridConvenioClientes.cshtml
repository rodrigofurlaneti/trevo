@using Portal.Controllers
@using Entidade.Uteis
@{
    var controller = ViewContext.Controller as ConvenioController;
}
@model List<ClienteViewModel>
@if (Model != null && Model.Any())
{
    <div style="margin-top:25px;">
        <div id="wid-id-2" data-widget-editbutton="false" data-widget-deletebutton="false" class="col-xs-6 jarviswidget jarviswidget-color-blueDark margin-bottom-0">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Lista de Clientes x Convênio</h2>
            </header>
            <table id="data_table_clients" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width: 60%;">Nome</th>
                        <th style="width: 30%;">E-mail</th>
                        <th style="width: 10%;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var x = 0; x < Model.Count; x++)
                    {
                        ClienteViewModel cliente = Model[x];
                        <tr class="line-blacklist">
                            <td>
                                @cliente.NomeExibicao
                            </td>
                            <td>
                                @cliente.Pessoa.ContatoEmail.Email
                            </td>
                            <td>
                                <span class="btn btn-danger" style="margin-right: 3px;" onclick="RemoverConvenioCliente(@cliente.Id)"><i class="fa fa-remove"></i></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
