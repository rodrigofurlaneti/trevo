@using Core.Extensions;

@model List<MaterialHistoricoViewModel>

<div id="lista-material-historico">
    <div class="modal fade" id="modal-material-historico" role="dialog" style="display:none">
        <div class="modal-dialog" style="width: 80%">
            <div class="modal-content" id="modalContent">
                <div class="modal-header panel-heading">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Histórico</h4>
                </div>

                <div id="modalBodyInformacoes" class="modal-body no-padding">
                    <div class="row no-margin-bottom">
                        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="jarviswidget jarviswidget-color-blueDark no-margin-bottom" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
                                <div style="border:none">
                                    <div class="widget-body no-padding">
                                        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
                                            <thead>
                                                <tr>
                                                    <th class="hasinput" style="width:10%">
                                                        <input type="text" class="form-control" placeholder="Filtrar Material" />
                                                    </th>
                                                    <th class="hasinput" style="width:10%">
                                                        <input type="text" class="form-control" placeholder="Filtrar Nº Nota" />
                                                    </th>
                                                    <th class="hasinput" style="width:10%">
                                                        <input type="text" class="form-control" placeholder="Filtrar Estoque" />
                                                    </th>
                                                    <th class="hasinput" style="width:10%">
                                                        <input type="text" class="form-control" placeholder="Filtrar Unidade" />
                                                    </th>
                                                    <th class="hasinput" style="width:10%">
                                                        <input type="text" class="form-control" placeholder="Filtrar Data/Hora" />
                                                    </th>
                                                    <th class="hasinput" style="width:10%">
                                                        <input type="text" class="form-control" placeholder="Filtrar Usuário" />
                                                    </th>
                                                    <th class="hasinput" style="width:10%">
                                                        <input type="text" class="form-control" placeholder="Filtrar Quantidade" />
                                                    </th>
                                                    <th class="hasinput" style="width:10%">
                                                        <input type="text" class="form-control" placeholder="Filtrar Ação" />
                                                    </th>
                                                </tr>
                                                <tr>
                                                    <th>Material</th>
                                                    <th>Nº Nota</th>
                                                    <th>Estoque</th>
                                                    <th>Unidade</th>
                                                    <th>Data/Hora</th>
                                                    <th>Usuário</th>
                                                    <th>Quantidade</th>
                                                    <th>Ação</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Material.Nome</td>
                                                        <td>@item.NumeroNota</td>
                                                        <td>@item.Estoque.Nome</td>
                                                        <td>@(item.Unidade?.Nome)</td>
                                                        <td>@item.DataInsercao</td>
                                                        <td>@(item.Usuario?.Funcionario?.Pessoa?.Nome)</td>
                                                        <td>@item.Quantidade</td>
                                                        <td>@item.AcaoEstoqueManual</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

</div>