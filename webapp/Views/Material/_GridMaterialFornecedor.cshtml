@using Entidade.Uteis
@model List<MaterialFornecedorViewModel>

<div id="lista-material-fornecedores">
    <div class="row">
        <div class="col-xs-12">
            <table id="tablevigencia" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width: 10%;">Nome</th>
                        <th style="width: 10%;">Personalizado</th>
                        <th style="width: 5%;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="item-fornecedor">
                                <td style="width: 10%">
                                    @item.Fornecedor.Nome
                                </td>
                                <td style="width: 10%">
                                    @(item.EhPersonalizado ? "Sim" : "Não")
                                </td>
                                <td style="width: 15%">
                                    <button type="button" name="botaoedicao" class="btn btn-primary" style="margin-right: 2px;" onclick="editarMaterialFornecedor(@item.Id)"><i class="fa fa-edit"></i></button>
                                    <button type="button" name="botaoedicao" class="btn btn-danger" style="margin-right: 3px;" onclick="removerMaterialFornecedor(@item.Id)"><i class="fa fa-remove"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>