@using Core.Extensions;

@model List<OISViewModel>

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Lista de Registros</h2>
            </header>

            <div>
                <div class="widget-body no-padding">
                    <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%" style="margin-top: 0px !important">
                        <thead>
                            <tr>
                                <th><input type="text" class="form-control" placeholder="Filtrar Id" /></th>
                                <th><input type="text" class="form-control" placeholder="Filtrar Data Abertura" /></th>
                                <th><input type="text" class="form-control" placeholder="Filtrar Usuário" /></th>
                                <th><input type="text" class="form-control" placeholder="Filtrar Cliente" /></th>
                                <th><input type="text" class="form-control" placeholder="Filtrar Categoria" /></th>
                                <th><input type="text" class="form-control" placeholder="Filtrar Status" /></th>
                                <th class="hasinput" style="width: 60px" rowspan="1" colspan="1">
                                </th>
                            </tr>
                            <tr>
                                <th>Id</th>
                                <th>Data Abertura</th>
                                <th>Usuário</th>
                                <th>Cliente</th>
                                <th>Categoria</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.DataAtualizacao</td>
                                        <td>@item.Usuario.Funcionario.Pessoa.Nome</td>
                                        <td>@item.NomeCliente</td>
                                        <td>@item.Categorias</td>
                                        <td>@item.StatusSinistro.ToDescription()</td>
                                        <td>
                                            <a class="btn btn-primary" href="@Url.Action("edit", new {item.Id})"><i class='fa fa-edit'></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </article>
</div>