@using Portal.Controllers
@model Entidade.Menu

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controller = ViewContext.Controller as MenuController;
}

@section pagespecific{
    @Styles.Render("~/content/css/menu/menu.css")
    @Styles.Render("~/Scripts/plugin/chosen_v1.8.2/chosen.css")
    @Scripts.Render("~/Scripts/plugin/chosen_v1.8.2/chosen.jquery.js")
    @Styles.Render("~/content/css/shared/menu-administrativo-config.css")
    @Scripts.Render("~/Scripts/Menu/Menu.js")
}

<div id="content">
    <div class="jarviswidget" id="wid-id-2" data-widget-colorbutton="false" data-widget-editbutton="false">
        <header>
            <span class="widget-icon"> <i class="fa fa-list-alt"></i> </span>
            <h2>
                Cadastro de Menu
            </h2>
        </header>
        <div>
            <div class="jarviswidget-editbox">
                <!-- This area used as dropdown edit box -->
            </div>
            <div class="widget-body">
                @using (Html.BeginForm("Salvar", "Menu", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id, new { @id = "hdnMenu" })
                    <div class="row margin-bottom-5">
                        <div class="col-xs-12 col-md-5">
                            <div class="col-xs-12 col-md-3 no-padding">
                                @Html.LabelFor(x => x.Descricao, "Nome da Página: ")
                            </div>
                            <div class="col-xs-12 col-md-6 no-padding">
                                @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Descricao, "Informe o Nome da Página!", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row margin-bottom-5">
                        <div class="col-xs-12 col-md-5">
                            <div class="col-xs-12 col-md-3 no-padding">
                                @Html.LabelFor(x => x.Url, "Url: ")
                            </div>
                            <div class="col-xs-12 col-md-6 no-padding">
                                @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row margin-bottom-5">
                        <div class="col-xs-12 col-md-5">
                            <div class="col-xs-12 col-md-3 no-padding">
                                @Html.LabelFor(x => x.Posicao, "Posição: ")
                            </div>
                            <div class="col-xs-12 col-md-6 no-padding">
                                @Html.TextBoxFor(x => x.Posicao, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Posicao, "Informe a Posição!", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row margin-bottom-5">
                        <div class="col-xs-12 col-md-5">
                            <div class="col-xs-12 col-md-3 no-padding">
                                @Html.LabelFor(x => x.Ativo, "Ativo: ")
                            </div>
                            <div class="col-xs-12 col-md-6 no-padding">
                                @Html.CheckBoxFor(x => x.Ativo, new { @checked = true, style = "width:20px; height:20px;" })
                            </div>
                        </div>
                    </div>
                    <div class="row margin-bottom-10">
                        <div class="col-xs-12 col-md-5">
                            <div class="col-xs-12 col-md-3 no-padding">
                                @Html.LabelFor(x => x.MenuPai, "Menu Principal: ")
                            </div>
                            <div class="col-xs-12 col-md-6 no-padding">
                                @Html.DropDownListFor(x => x.MenuPai.Id, new SelectList(controller.ListaMenusPai, "Id", "Descricao"), "Selecione um Menu Principal...", new { @id = "menus", @class = "chosen-select", data_placeholder = "Selecione um Menu Principal..." })
                            </div>
                        </div>
                    </div>
                    <div class="row margin-bottom-5">
                        <div class="pull-right margin-right-10">
                            <button type="submit" class="btn btn-lg btn-primary">
                                <i class="fa fa-save"></i> Salvar
                            </button>
                            <a class="btn btn-lg btn-danger" href="/menu/index"><i class="fa fa-times"></i>&nbsp;Cancelar</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div>
        <section id="widget-grid" class="">
            <div class="row">
                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1"
                         data-widget-editbutton="false"
                         data-widget-colorbutton="false"
                         data-widget-fullscreenbutton="false"
                         data-widget-deletebutton="false"
                         data-widget-togglebutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                            <h2>Lista de Menus </h2>
                        </header>
                        <div>
                            <div class="widget-body">
                                <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
                                    <thead>
                                        <tr>
                                            <th class="hasinput" style="width:10%">
                                                <input type="text" class="form-control" placeholder="Filtrar Id" />
                                            </th>
                                            <th class="hasinput" style="width:15%">
                                                <input type="text" class="form-control" placeholder="Filtrar Nome" />
                                            </th>
                                            <th class="hasinput" style="width:15%">
                                                <input type="text" class="form-control" placeholder="Filtrar Url" />
                                            </th>
                                            <th class="hasinput" style="width:15%">
                                                <input type="text" class="form-control" placeholder="Filtrar Posição" />
                                            </th>
                                            <th class="hasinput" style="width:15%">
                                                <input type="text" class="form-control" placeholder="Filtrar Menu Principal" />
                                            </th>
                                            <th class="hasinput" style="width:15%">
                                                <input type="text" class="form-control" placeholder="Filtrar Ativo" />
                                            </th>
                                            <th class="hasinput" style="max-width: 120px; min-width: 120px; width: 1%;" rowspan="1" colspan="1">
                                            </th>
                                        </tr>
                                        <tr>
                                            <th data-hide="phone">Id</th>
                                            <th data-hide="expand">Nome da Página: </th>
                                            <th data-hide="phone">Url: </th>
                                            <th data-hide="phone">Posição: </th>
                                            <th data-hide="phone">Menu Principal: </th>
                                            <th data-hide="phone">Ativo: </th>
                                            <th data-class="expand">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (controller.ListaMenus != null)
                                        {
                                            foreach (var m in controller.ListaMenus)
                                            {
                                                <tr>
                                                    <td>@m.Id</td>
                                                    <td>@m.Descricao</td>
                                                    <td>@m.Url</td>
                                                    <td>@m.Posicao</td>
                                                    <td>@(m.MenuPai != null && m.MenuPai.Id > 0 ? m.MenuPai.Descricao : string.Empty)</td>
                                                    <td>@(m.Ativo ? "Sim" : "Não")</td>
                                                    <td>
                                                        <a class="btn btn-primary" href="/menu/edit/@m.Id"><i class='fa fa-edit'></i></a>
                                                        <a class="btn btn-danger" href="/menu/delete/@m.Id"><i class="fa fa-remove"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>

</div>