@model Aplicacao.ViewModels.EnderecoViewModel
<div>
    <div class="row margin-bottom-5">
        <div class="col-xs-2">


            @*@Html.TextBoxFor(endereco =>
                         endereco.Estado, new { @class = "form-control", @id = "estado", @hidden = "" })*@

            <label>CEP:</label><br />
            @Html.TextBoxFor(endereco =>
                         endereco.Cep, new { @class = "form-control", @id = "cep" })
            @Html.ValidationMessageFor(endereco => endereco.Cep, "Informe o CEP!", new { @class = "text-danger" })

        </div>

        <div class="col-xs-2">

            <label>Endereço:</label><br />
            @Html.TextBoxFor(endereco =>
                            endereco.Logradouro, new { @class = "form-control", @id = "logradouro" })
            @Html.ValidationMessageFor(endereco => endereco.Logradouro, "Informe o Endereço!", new { @class = "text-danger" })

        </div>

        <div class="col-xs-2">

            <label>N°:</label><br />
            @Html.TextBoxFor(endereco =>
                            endereco.Numero, new { @class = "form-control", @id = "numeroEndereco" })
            @Html.ValidationMessageFor(endereco => endereco.Numero, "Informe o Número!", new { @class = "text-danger" })

        </div>

        <div class="col-xs-2">

            <label>Bairro:</label><br />
            @Html.TextBoxFor(endereco =>
                            endereco.Bairro, new { @class = "form-control", @id = "bairro"})
            @Html.ValidationMessageFor(endereco => endereco.Bairro, "Informe o Bairro!", new { @class = "text-danger" })

        </div>
    </div>
    <div class="row margin-bottom-5">
        <div class="col-xs-2">

            <label>Cidade:</label><br />
            @Html.TextBoxFor(endereco =>
                            endereco.Cidade.Descricao, new { @class = "form-control", @id = "cidade" })
            @Html.ValidationMessageFor(endereco => endereco.Cidade, "Informe a Cidade!", new { @class = "text-danger" })

        </div>

        <div class="col-xs-2">

            <label>Complemento:</label><br />
            @Html.TextBoxFor(endereco =>
                            endereco.Complemento, new { @class = "form-control", @id = "complemento" })

        </div>
    </div>
</div>