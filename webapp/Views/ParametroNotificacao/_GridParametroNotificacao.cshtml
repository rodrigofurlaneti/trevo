@model List<ParametroNotificacaoViewModel>
<div class="widget-body">
    @if (Model != null && Model.Any())
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="hasinput" style="width: 30%">
                        <input type="text" class="form-control" placeholder="Filtrar Tipo de Notificação" />
                    </th>
                    <th class="hasinput" style="width: 69%">
                        <input type="text" class="form-control" placeholder="Filtrar Usuários Aprovadores" />
                    </th>
                    <th class="hasinput" style="max-width: 120px; min-width: 120px; width: 1%;" rowspan="1" colspan="1">
                    </th>
                </tr>
                <tr>
                    <th data-hide="expand">Tipo Notificação</th>
                    <th data-hide="expand">Usuários Aprovadores</th>
                    <th data-class="expand">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.TipoNotificacao.Descricao</td>
                        <td>
                            @foreach (var item in m.Aprovadores)
                            {
                                @(String.Format("{0} {1}", item.Usuario.Funcionario.Pessoa.Nome, "/"))
                            }
                        </td>
                        <td>
                            <a class="btn btn-primary" href="/parametronotificacao/edit/@m.Id"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-danger" href="/parametronotificacao/delete/@m.Id"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <tr>
                <td>
                    Nenhum registro encontrado.
                </td>
            </tr>
        </table>

    }
</div>
