@model RetiradaCofreViewModel

@{
    Layout = null;
}

<div id="modalInformacoes" class="modal fade" role="dialog" style="width:auto; ">
    <div class="modal-dialog" style="width:700px">
        <div class="modal-content col-xs-12" style="width:700px;  background-color: whitesmoke">
            <div id="modalBodyInformacoes" class="modal-body col-xs-12" style=" background-color: whitesmoke">
                <h4 class="text-center">Informacoes sobre solicitacao de retirada cofre</h4>
                <br />
                @{
                    if (Model != null)
                    {
                        <div class="row">
                            <div class="col-xs-12 no-padding">
                                <label>Numero da Solicitação: @(Model.Id.ToString().PadLeft(6, '0'))</label>
                            </div>
                        </div>
                        <div class="row" style="border: solid thin; margin-bottom:auto">
                            <div class="col-xs-3 col-sm-3 text-center" style="border-right: solid thin;">
                                <label>Numero Conta</label>
                            </div>
                            <div class="col-xs-3 col-sm-3 text-center" style="border-right: solid thin;">
                                <label>Tipo Pagamento</label>
                            </div>
                            <div class="col-xs-3 col-sm-3 text-center" style="border-right: solid thin;">
                                <label>Valor</label>
                            </div>
                            <div class="col-xs-3 col-sm-3 text-center">
                                <label>Vencimento:</label>
                            </div>
                        </div>
                        <div class="row" style="border: solid thin; border-top: none; margin-bottom: 15px" >
                            <div class="col-xs-3 col-sm-3 text-center" style="border-right: solid thin;">
                                <label>@(Model.ContasAPagar.Id.ToString().PadLeft(6, '0'))</label>
                            </div>
                            <div class="col-xs-3 col-sm-3 text-center" style="border-right: solid thin;">
                                <label>@(Model.ContasAPagar.TipoPagamento)</label>
                            </div>
                            <div class="col-xs-3 col-sm-3 text-center" style="border-right: solid thin;"> 

                                @{ 
                                    var valorformatar = !string.IsNullOrEmpty(Model.ContasAPagar.ValorTotal) ? Convert.ToDecimal(Model.ContasAPagar.ValorTotal) : 0;
                                }

                                <label>@(string.Format("{0:C}", valorformatar))</label>
                            </div>
                            <div class="col-xs-3 col-sm-3 text-center">
                                <label>@(Model.ContasAPagar.DataVencimento.ToShortDateString())</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 no-padding">
                                <label>Observações: @(Model.Observacoes)</label>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>