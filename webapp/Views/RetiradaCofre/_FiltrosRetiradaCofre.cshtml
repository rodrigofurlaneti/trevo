@using Portal.Controllers
@model Aplicacao.ViewModels.RetiradaCofreViewModel
@{
    Layout = null;
}

<div class="widget-body">
    <div id="conteudo" class="row margin-bottom-5">
        <div class="col-xs-12 no-padding margin-bottom-10">

            <div class="col-xs-12 col-sm-4">
                <div class="col-xs-12 no-padding">
                    <label>Conta Financeira: </label>
                    @Html.DropDownListFor(x => x.ContasAPagar.ContaFinanceira.Id, (SelectList)ViewBag.ListaContaFinanceiraSelectList, "Selecione uma Conta Financeira...", new { @id = "contaFinanceira", @class = "chosen-select", data_placeholder = "Selecione uma Conta Financeira..." })      
                </div>
            </div>

            <div class="col-xs-12 col-sm-4">
                <div class="col-xs-12 no-padding">
                    <label class="col-xs-12 no-padding">Departamento: </label>
                    <div class="col-xs-12 no-padding">
                        @Html.DropDownListFor(x => x.ContasAPagar.Departamento.Id, (SelectList)ViewBag.DepartamentoSelectList, "Selecione um Departamento...", new { @id = "departamento", @class = "chosen-select", data_placeholder = "Selecione um Departamento..." })
                    </div>
                </div>
            </div>
        </div>

        <div id="conteudo" class="margin-bottom-5">
            <div class="col-xs-12 col-md-1">
                <div class="col-xs-12 no-padding">
                    <label>Data de Solicitação</label>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="col-xs-12 no-padding">
                    <label>Entre</label>
                    @Html.TextBoxFor(x => x.DataInicio, new { @id = "dtInicio", Value = Model != null && Model.DataInicio > System.Data.SqlTypes.SqlDateTime.MinValue.Value ? Model.DataInicio.Value.ToString("dd/MM/yyyy") : string.Empty, @class = "form-control fieldDate" })
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="col-xs-12 no-padding">
                    <label>E</label>
                    @Html.TextBoxFor(x => x.DataFim, new { @id = "dtFim", Value = Model != null && Model.DataFim > System.Data.SqlTypes.SqlDateTime.MinValue.Value ? Model.DataFim.Value.ToString("dd/MM/yyyy") : string.Empty, @class = "form-control fieldDate" })
                </div>
            </div>
        </div>

        <div class="col-xs-12 no-padding margin-bottom-10">
            <div class="col-xs-12 col-sm-4">
                <div class="col-xs-12 no-padding">
                    <label class="col-xs-12 no-padding">Solicitante: </label>
                    <div class="col-xs-12 no-padding">
                        @Html.DropDownListFor(x => x.Usuario.Id, (SelectList)ViewBag.ListaUsuarioSelectList, "Selecione um Solicitante...", new { @id = "usuario", @class = "chosen-select", data_placeholder = "Selecione um Solicitante..." })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xs-12">
            <button type="submit" id="pesquisar" class="btn btn-lg btn-primary pull-right" onclick="BuscarRetiradaCofre()">
                <i class="fa fa-search"></i> Buscar
            </button>
        </div>
    </div>
</div>
