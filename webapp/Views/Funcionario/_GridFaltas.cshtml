@using Core.Extensions;

@model List<ControlePontoDiaViewModel>

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Faltas</h2>
            </header>

            <div>
                <div class="widget-body no-padding">
                    <table id="datatable_grid_faltas" class="table table-striped table-bordered" width="100%" style="margin-top: 0px !important">
                        <thead>
                            <tr>
                                <th class="hasinput">
                                    <input id="coluna-busca-ano" type="text" class="form-control" placeholder="Filtrar Ano" />
                                </th>
                                <th class="hasinput">
                                    <input id="coluna-busca-dia-mes" type="text" class="form-control" placeholder="Filtrar Dia/Mês" />
                                </th>
                                <th class="hasinput">
                                    <input id="coluna-busca-justificada" type="text" class="form-control" placeholder="Filtrar Justificada" />
                                </th>
                                <th class="hasinput">
                                    <input id="coluna-busca-observacao" type="text" class="form-control" placeholder="Filtrar Observação" />
                                </th>
                            </tr>
                            <tr>
                                <th>Ano</th>
                                <th>Dia/Mês</th>
                                <th>Justificada</th>
                                <th>Observação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(item.Data.Year)</td>
                                    <td>@(item.Data.ToString("dd/MM"))</td>
                                    <td>@(item.FaltaJustificada ? "Sim" : "Não")</td>
                                    <td>
                                        @Html.TextArea("ControlePontoObservacao", item.Observacao, new { @class = "form-control no-resize", @rows = "2", @style = "width: 100%", onblur = "EditarObservacaoDia(event, " + item.Id + ")" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </article>
</div>