@model List<Aplicacao.ViewModels.FuncionarioViewModel>


<div class="widget-body">
    @Html.Partial("~/Views/Shared/_PaginacaoGenericaAjax.cshtml")

    @if (Model != null && Model.Any())
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th data-hide="expand">Nome</th>
                    <th data-hide="expand">CPF: </th>
                    <th data-hide="expand">Supervisor: </th>
                    <th data-class="expand" style="width: 120px">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Pessoa.Nome</td>
                        <td>@m.Cpf</td>
                        <td>@m.Supervisor.Pessoa.Nome</td>
                        <td>
                            <a class="btn btn-primary" href="/funcionario/edit/@m.Id"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-danger" href="/funcionario/delete/@m.Id"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <tr>
                <td>
                    Nenhum funcionario foi encontrado.
                </td>
            </tr>
        </table>

    }

    @Html.Partial("~/Views/Shared/_PaginacaoGenericaAjax.cshtml")

</div>


