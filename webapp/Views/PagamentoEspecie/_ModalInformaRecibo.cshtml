@model List<ContasAPagarViewModel>

@{
    Layout = null;
}

<div id="modalInformaRecibo" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content col-xs-12">
            <div id="modalBodyInformarRecibo" class="modal-body col-xs-12" style="max-height:320px; overflow: auto;">
                <p class="text-center no-margin">Deseja informar Recibos?<br />Se sim, informe:</p>
                @{
                    if (Model != null && Model.Count() > 0)
                    {
                        for (int i = 0; i < Model.Count(); i++)
                        {
                            var item = Model.ToList()[i];

                            <div class="col-xs-12 col-sm-12">
                                <hr class="col-xs-12 margin-top-15 margin-bottom-15"/>

                                <div class="col-xs-4 heightline">
                                    <label>Numero da Conta:</label>
                                </div>
                                <div class="col-xs-8 heightline">
                                    <label>@(item.Id.ToString().PadLeft(6, '0'))</label>
                                </div>
                                <div class="col-xs-4 heightline">
                                    <label>Numero de Recibo:</label>
                                </div>
                                <div class="col-xs-8 heightline">
                                    <input type="text" data-numero-recibo data-conta-id="@item.Id" style="width:100%;" onblur="somenteNumeros(this)" onkeypress="validaNumeros(event);" value="@(item.NumeroRecibo)" maxlength="40" />
                                </div>
                                <div class="col-xs-4 heightline">
                                    <label>Valor pago:</label>
                                </div>
                                <div class="col-xs-8 heightline">
                                    @*<label>@(string.Format("R$ {0:N}", item.Valor))</label>*@
                                    <label>@(Convert.ToDecimal(item.Valor).ToString("C2"))</label>
                                </div>
                                <div class="col-xs-4 heightline">
                                    <label>Data Vencimento:</label>
                                </div>
                                <div class="col-xs-8 heightline">
                                    <label>@(item.DataVencimento.ToShortDateString())</label>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
            <div class="modal-footer">
                <div class="col-xs-12 col-sm-12">
                    <div class="pull-right margin-right-10">
                        <button class="btn btn-lg btn-danger" data-dismiss="modal" aria-label="Close">
                            Cancelar
                        </button>
                    </div>
                    <div class="pull-right margin-right-10">
                        <button type="submit" class="btn btn-lg btn-primary" onclick="SalvarRecibos();">
                            Salvar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>