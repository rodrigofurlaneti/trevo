
@model List<Aplicacao.ViewModels.ContaFinanceiraViewModel>


<div class="widget-body">
    @if (Model != null && Model.Any())
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th class="hasinput" style="width: 18%">
                        <input type="text" class="form-control" placeholder="Filtrar Descrição" />
                    </th>
                    <th class="hasinput" style="width: 18%">
                        <input type="text" class="form-control" placeholder="Filtrar Banco" />
                    </th>
                    <th class="hasinput" style="width: 16%">
                        <input type="text" class="form-control" placeholder="Filtrar Agência" />
                    </th>
                    <th class="hasinput" style="width: 16%">
                        <input type="text" class="form-control" placeholder="Filtrar Conta" />
                    </th>
                    <th class="hasinput" style="width: 16%">
                        <input type="text" class="form-control" placeholder="Filtrar CPF/CNPJ" />
                    </th>
                    <th class="hasinput" style="width: 15%">
                        <input type="text" class="form-control" placeholder="Filtrar Conta Padrão" />
                    </th>
                    <th class="hasinput" style="max-width: 120px; min-width: 120px; width: 1%;" rowspan="1" colspan="1">
                    </th>
                </tr>
                <tr>
                    <th data-hide="expand">Descrição</th>
                    <th data-hide="expand">Banco</th>
                    <th data-hide="expand">Agência</th>
                    <th data-hide="expand">Conta</th>
                    <th data-hide="expand">CPF/CNPJ</th>
                    <th data-hide="expand">Conta Padrão</th>
                    <th data-class="expand">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                <tr>
                    <td>@m.Descricao</td>
                    <td>@m.Banco.Descricao</td>
                    <td>@m.Agencia - @m.DigitoAgencia</td>
                    <td>@m.Conta - @m.DigitoConta</td>
                    <td>@(m.Cpf == null ? m.Cnpj : m.Cpf)</td>
                    <td>@(m.ContaPadrao ? "Sim": "Não")</td>
                    <td>
                        <a class="btn btn-primary" href="/contaFinanceira/edit/@m.Id"><i class='fa fa-edit'></i></a>
                        <a class="btn btn-danger" href="/contaFinanceira/delete/@m.Id"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <tr>
                <td>
                    Nenhuma Conta Financeira foi encontrada.
                </td>
            </tr>
        </table>

    }
</div>