@using Entidade.Uteis
@model PrecoViewModel
<div style="margin-top: 20px;">
</div>
@if (Model.Funcionamentos != null)
{
    <div id="container-tables" style="margin-top:50px;">
            @foreach (var funcionamento in Model.Funcionamentos)
            {

                <div class="col-lg-3 table-mensalista">
                    <h3 style="margin-left: 5%;" data-value="@funcionamento.Id" class="nomeFuncionamento">@funcionamento.Nome</h3>
                    <div class="col-xs-3">
                        <table class="table table-striped table-bordered data_table_funcionamento">

                            <thead>
                                <tr>
                                    <th style="width: 1%; display:none;"></th>
                                    <th style="width: 50%;">Horario</th>
                                    <th style="width: 30%;">Valor</th>
                                </tr>
                            </thead>
                            <tbody class="dynamicInputs">
                                @foreach (var horarioPreco in funcionamento.HorariosPrecos)
                                {

                                    <tr>

                                        @if (horarioPreco.Horario.Contains(':'))
                                        {
                                            <td><input type="time" readonly="readonly" class="horario" value="@horarioPreco.Horario" placeholder="Ex noturno" /></td>
                                        }
                                        else
                                        {
                                            <td><input type="text" readonly="readonly" class="horario" value="@horarioPreco.Horario" placeholder="Ex noturno" /></td>
                                        }

                                        <td><input type="text" readonly="readonly" data-value="@horarioPreco.Id" class="valor" value="@horarioPreco.Valor.ToString("F")" placeholder="Ex R$ 20,00" /></td>
                                    </tr>


                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
    </div>

}

