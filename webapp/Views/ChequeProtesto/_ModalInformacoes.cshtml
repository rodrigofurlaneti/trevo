@model ChequeViewModel

@{
    Layout = null;
}

<div class="modal fade" id="modalInformacoes" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content panel-warning" id="modalContent">
            <div class="modal-header panel-heading">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Alterar Status Cheques</h4>
            </div>
            <div id="modalBodyInformacoes" class="modal-body">
                <h5 style="white-space:pre-line">Alteração de Status para Protestado?</h5>
                <br />

                <div class="row">
                    <div class="col-xs-12  col-md-6">
                        <label>Cartório Protestado: </label><br />
                        <input id="cartorioprotestado" class="form-control" type="text" />
                    </div>
                    <div class="col-xs-12 col-md-4">
                        <div class="col-xs-12 no-padding">
                            <label>Data Protesto:</label>
                            <br />
                            @Html.TextBoxFor(x => x.DataProtesto, new { @id = "dataprotesto", Value = Model != null && Model.DataDevolucao > System.Data.SqlTypes.SqlDateTime.MinValue.Value ? Model.DataProtesto.Value.ToString("dd/MM/yyyy") : string.Empty, @class = "form-control fieldDate" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-primary" data-dismiss="modal" onclick="AlterarStatusCheque();">Alterar</button>
                <button id="fechamodalpagar" type="button" class="btn btn-default btn-lg" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>