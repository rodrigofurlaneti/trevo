@model List<Aplicacao.ViewModels.ChequeViewModel>

@{
    Layout = null;
}

<div class="widget-body">
    @if (Model != null && Model.Any())
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th class="hasinput" style="width: 8%">
                        <input type="text" class="form-control" placeholder="Filtrar Numero" />
                    </th>
                    <th class="hasinput" style="width: 10%">
                        <input type="text" class="form-control" placeholder="Filtrar Emitente" />
                    </th>
                    <th class="hasinput" style="width: 10%">
                        <input type="text" class="form-control" placeholder="Filtrar Conta Financeira" />
                    </th>
                    <th class="hasinput" style="width: 10%">
                        <input type="text" class="form-control" placeholder="Filtrar Agencia" />
                    </th>
                    <th class="hasinput" style="width: 8%">
                        <input type="text" class="form-control" placeholder="Filtrar Conta" />
                    </th>
                    <th class="hasinput" style="width: 8%">
                        <input type="text" class="form-control" placeholder="Filtrar CPF/CNPJ" />
                    </th>
                    <th class="hasinput" style="width: 10%">
                        <input type="text" class="form-control" placeholder="Filtrar Valor" />
                    </th>
                    <th class="hasinput" style="width: 10%">
                        <input type="text" class="form-control" placeholder="Filtrar Status" />
                    </th>
                    <th class="hasinput" style="width: 13%">
                        <input type="text" class="form-control" placeholder="Filtrar Cartorio Protesto" />
                    </th>
                    <th class="hasinput" style="width: 10%">
                        <input type="text" class="form-control" placeholder="Filtrar Data Protesto" />
                    </th>
                    <th class="hasinput" style="width: 15%">
                        <input type="text" class="form-control" placeholder="Filtrar Data Protesto" />
                    </th>
                </tr>
                <tr>
                    <th>
                    </th>
                    <th data-hide="expand">Numero</th>
                    <th data-hide="expand">Emitente</th>
                    <th data-hide="expand">Conta Financeira</th>
                    <th data-hide="expand">Agencia</th>
                    <th data-hide="expand">Conta</th>
                    <th data-hide="expand">CPF/CNPJ</th>
                    <th data-hide="expand">Valor</th>
                    <th data-class="expand">Status</th>
                    <th data-class="expand">Cartorio Protesto</th>
                    <th data-class="expand">Data Protesto</th>
                    <th data-class="expand">Data Devolução</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        @{ var datadeprotesto = @m.DataProtesto != null ? @m.DataProtesto.Value.ToShortDateString() : "";
                            var datadevolucao = @m.DataDevolucao != null ? @m.DataDevolucao.Value.ToShortDateString() : "";}
                        <td>
                            <div class="col-xs-12 nopadding input-group">
                                <input data-retiradaCofreId="@m.Id" type="checkbox" autocomplete="off" class="form-control center-block no-float seleciona-retirada-cofre" onchange="AdicionarRetiradaSelecionada(this)">
                            </div>
                        </td>
                        <td>@m.Numero</td>
                        <td>@m.Emitente</td>
                        <td>@m.ContaFinanceira.Descricao</td>
                        <td>@m.Agencia - @m.DigitoAgencia</td>
                        <td>@m.Conta - @m.DigitoConta</td>
                        <td>@m.CPFCNPJ</td>
                        <td>@m.Valor</td>
                        <td>@m.StatusCheque</td>
                        <td>@m.CartorioProtestado</td>
                        <td>@datadeprotesto</td>
                        <td>@datadevolucao</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row margin-bottom-5">
            <div class="pull-right margin-right-10">
                <a class="btn btn-lg btn-danger" onclick="BuscarChequeProtestos()"><i class="fa fa-times"></i>&nbsp;Cancelar</a>
            </div>
            <div class="pull-right margin-right-10">
                <button id="Pagar" type="button" class="btn btn-lg btn-primary" onclick="Informacoes()"><i class="fa fa-save"></i>Salvar</button>
            </div>
        </div>
    }
    else
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <td>
                    Nenhum Cheque foi encontrado.
                </td>
            </tr>
        </table>
    }

</div>