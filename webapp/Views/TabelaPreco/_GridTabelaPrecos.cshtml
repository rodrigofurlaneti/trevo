
@model List<Aplicacao.ViewModels.PrecoViewModel>


<div class="widget-body">
    @if (Model != null && Model.Any())
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th class="hasinput" style="width: 30%">
                        <input type="text" class="form-control" placeholder="Filtrar Nome" />
                    </th>
                    <th class="hasinput" style="width: 18%">
                        <input type="text" class="form-control" placeholder="Filtrar Data" />
                    </th>
                    <th class="hasinput" style="width: 30%">
                        <input type="text" class="form-control" placeholder="Filtrar Usuário" />
                    </th>
                    <th class="hasinput" style="width: 30%">
                        <input type="text" class="form-control" placeholder="Filtrar Status" />
                    </th>
                    <th class="hasinput" style="max-width: 120px; min-width: 120px; width: 1%;" rowspan="1" colspan="1">
                    </th>
                </tr>
                <tr>
                    <th data-hide="expand">Nome Tabela</th>
                    <th data-hide="expand">Data Cadastro</th>
                    <th data-hide="expand">Usuário</th>
                    <th data-hide="expand">Status</th>
                    <th data-class="expand">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Nome</td>
                        <td>@m.DataInsercao</td>
                        <td>@m.NomeUsuario</td>
                        <td>@m.PrecoStatus</td>
                        <td>
                            <a class="btn btn-primary" href="/TabelaPreco/edit/@m.Id"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-danger" href="/TabelaPreco/delete/@m.Id"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <tr>
                <td>
                    Nenhuma Tabela de Preço foi encontrada.
                </td>
            </tr>
        </table>

    }
</div>
