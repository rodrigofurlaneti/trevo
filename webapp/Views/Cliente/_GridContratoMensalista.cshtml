@using Entidade.Uteis
@model List<ContratoMensalistaViewModel>

<div>
    <div class="col-xs-12 col-md-12">
        <div class="jarviswidget jarviswidget-color-blueDark margin-bottom-0" id="wid-id-1" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Contratos Mensalistas</h2>
            </header>
            <table id="data_table_address" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width: 45%;">Unidade</th>
                        <th style="width: 40%;">Contrato</th>
                        <th style="width: 15%; text-align:center;">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Unidade.Nome
                                </td>
                                <td>
                                    @item.NumeroContrato
                                </td>
                                <td class="text-align-center" style="text-align:center;">
                                    <span class="btn btn-warning" style="margin-right: 2px;" onclick="AbrirContratoMensalista(@item.Id)"><i class="fa fa-eye"></i> Abrir</span>
                                </td>
                            </tr>
                        }
                    }                   
                </tbody>
            </table>
        </div>
    </div>
</div>
