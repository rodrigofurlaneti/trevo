@using Core.Extensions
@using Entidade.Uteis
@using Aplicacao.ViewModels
@model ClienteCadastroViewModel

<div style="margin-top: 20px;">
    <div>
        @Html.Hidden("id-comercial")
        @Html.Hidden("blacklist-comercial")
        @Html.Hidden("tipoMotivo-comercial")
        @Html.Hidden("descricaoMotivo-comercial")
        <fieldset>
            @Html.Label("Endereço Comercial", new { style = "font-weight: bold; font-size: 1.17em;" })
            <section>
                <div class="row">
                    <div class="col-sm-2">
                        <label>Cep:</label><br />
                        @Html.TextBoxFor(x => x.EnderecoComercial.Cep, new { @id = "zipcode-comercial", @class = "form-control", @style = "display:inline; max-width: 98% !important;", @maxlength = "9" })
                        <span class="icon"><i id="search-icon-comercial" class="fa fa-search"></i></span>
                        <span id="invalid_zipcode-comercial" style="color: #b94a48; display: none;">Cep Inválido!</span>
                    </div>
                    <div class="col-sm-3">
                        <label>Endereço:</label>
                        @Html.TextBoxFor(x => x.EnderecoComercial.Logradouro, new { @id = "address-comercial", @class = "form-control" })
                    </div>
                    <div class="col-md-1">
                        <label>Nº:</label>
                        @Html.TextBoxFor(x => x.EnderecoComercial.Numero, new { @id = "number-comercial", @class = "form-control" })
                    </div>
                    <div class="col-md-2 no-padding">
                        <label>Complemento:</label>
                        @Html.TextBoxFor(x => x.EnderecoComercial.Complemento, new { @id = "complement-comercial", @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <label>Bairro:</label>
                        @Html.TextBoxFor(x => x.EnderecoComercial.Bairro, new { @id = "district-comercial", @class = "form-control" })
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <div class="col-sm-2">
                        <label>Cidade:</label>
                        @Html.TextBoxFor(x => x.EnderecoComercial.Cidade.Descricao, new { @id = "city-comercial", @class = "form-control" })
                        @Html.HiddenFor(x => x.EnderecoComercial.Cidade.Id, new { @id = "city-comercial-id" })
                    </div>
                    <div class="col-sm-2">
                        <label>Estado:</label>
                        @Html.TextBoxFor(x => x.EnderecoComercial.Estado, new { @id = "state-comercial", @class = "form-control" })
                    </div>
                </div>
            </section>
        </fieldset>
    </div>
</div>
