@using Entidade.Uteis
@model List<TabelaPrecoMensalistaUnidadeViewModel>

<div style="margin-top:50px;">
    <div class="col-xs-10">
        <table id="data_table_address" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 1%; display:none;"></th>
                    <th style="width: 10%;">Unidade</th>
                    <th style="width: 10%;">Horario Início</th>
                    <th style="width: 10%;">Horario Fim</th>
                    <th style="width: 10%;">Hora Adicional</th>
                    <th style="width: 10%;">Qtd. Hora(s) Adicional(is)</th>
                    <th style="width: 10%;">Valor</th>
                    <th style="width: 5%;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    for (var x = 0; x < Model.Count; x++)
                    {
                        <tr>
                            <td style="display:none;">@Model[x].Id</td>
                            <td style="width: 10%">
                                @(Model[x].Unidade.Nome)
                            </td>
                            <td style="width: 10%">
                                @Model[x].HorarioInicio
                            </td>
                            <td style="width: 10%">
                                @Model[x].HorarioFim
                            </td>
                            <td style="width: 10%">
                                @(Model[x].HoraAdicional ? "Sim" : "Não")
                            </td>
                            <td style="width: 10%">
                                @(Model[x].HoraAdicional ? Model[x].QuantidadeHoras.ToString() : string.Empty)
                            </td>
                            <td style="width: 10%">
                                @(Model[x].HoraAdicional ? Model[x].ValorQuantidade : string.Empty)
                            </td>
                            <td style="width: 15%">
                                <button type="button" name="botaoedicao" class="btn btn-primary" style="margin-right: 2px;" onclick="editarItem(@Model[x].Id)"><i class="fa fa-edit"></i></button>
                                <button type="button" name="botaoedicao" class="btn btn-danger" style="margin-right: 3px;" onclick="removerItem(@Model[x].Id)"><i class="fa fa-remove"></i></button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
