@using Core.Extensions;

@model List<Aplicacao.ViewModels.PedidoLocacaoViewModel>

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Lista de Registros</h2>
            </header>

            <div>
                <div class="widget-body no-padding">
                    <table id="datatable_fixed_column_locacao" class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Unidade" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Tipo Locação" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Valor" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Valor Total" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Desconto" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Nome do Fiador" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Cliente" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Fiador Garantia" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Forma de Pagamento" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Data do Primeiro Pagamento" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Data dos Demais Pagamentos" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Valor Primeiro Pagamento" />
                                </th>
                                <th class="hasinput" style="width:10%">
                                    <input type="text" class="form-control" placeholder="Filtrar Status" />
                                </th>
                                <th class="hasinput" style="max-width: 120px; min-width: 120px; width: 1%;" rowspan="1" colspan="1">
                                </th>
                            </tr>
                            <tr>
                                <th>Unidade</th>
                                <th>Tipo Locação</th>
                                <th>Valor</th>
                                <th>Valor Total</th>
                                <th>Desconto</th>
                                <th>Nome do Fiador</th>
                                <th>Cliente</th>
                                <th>Fiador Garantia</th>
                                <th>Forma de Pagamento</th>
                                <th>Data do Primeiro Pagamento</th>
                                <th>Data dos Demais Pagamentos</th>
                                <th>Valor Primeiro Pagamento</th>
                                <th>Status</th>
                                <th data-class="expand">Ações</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Unidade.Nome</td>
                                    <td>@item.TipoLocacao.Descricao</td>
                                    <td>@item.Valor</td>
                                    <td>@item.ValorTotal</td>
                                    <td>@(item.Desconto != null ? item.Desconto.Descricao : string.Empty)</td>
                                    <td>@item.NomeFiador</td>
                                    <td>@(item.Cliente.NomeExibicao)</td>
                                    <td>@item.FormaGarantia</td>
                                    <td>@item.FormaPagamento.ToDescription()</td>
                                    <td>@item.DataPrimeiroPagamento.ToShortDateString()</td>
                                    <td>@item.DataDemaisPagamentos.ToShortDateString()</td>
                                    <td>@item.ValorPrimeiroPagamento</td>
                                    <td>@item.Status.ToDescription()</td>

                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("edit", new {item.Id})"><i class='fa fa-edit'></i></a>
                                        <a class="btn btn-danger" href="@Url.Action("delete", new {item.Id})"><i class="fa fa-remove"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </article>
</div>