@using Core.Extensions;

@model List<OficinaViewModel>

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Lista de Registros</h2>
            </header>

            <div>
                <div class="widget-body no-padding">
                    <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%" style="margin-top: 0px !important">
                        <thead>
                            <tr>
                                <th><input type="text" class="form-control" placeholder="Filtrar Nome/Nome Fantasia" /></th>
                                <th><input type="text" class="form-control" placeholder="Filtrar Telefone/Celular" /></th>
                                <th><input type="text" class="form-control" placeholder="Filtrar Indicado Pelo Cliente" /></th>
                                <th><input type="text" class="form-control" placeholder="Filtrar Nome Cliente" /></th>
                                <th class="hasinput" style="width: 120px" rowspan="1" colspan="1">
                                </th>
                            </tr>
                            <tr>
                                <th>Nome/Nome Fantasia</th>
                                <th>Telefone/Celular</th>
                                <th>Indicado Pelo Cliente</th>
                                <th>Nome Cliente</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Nome</td>
                                        <td>@item.ContatosOficina</td>
                                        <td>@(item.IndicadaPeloCliente ? "Sim" : "Não")</td>
                                        <td>@item.NomeCliente</td>
                                        <td>
                                            <a class="btn btn-primary" href="@Url.Action("edit", new {item.Id})"><i class='fa fa-edit'></i></a>
                                            <a class="btn btn-danger" href="@Url.Action("delete", new {item.Id})"><i class='fa fa-close'></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </article>
</div>