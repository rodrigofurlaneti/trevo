@model List<LeituraCNABDetalhesViewModel>
@{
    Layout = null;
}

<div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-2" data-widget-editbutton="false" data-widget-deletebutton="false">
    <header>
        <span class="widget-icon"> <i class="fa fa-list-alt"></i> </span>
        <h2>
            Detalhes do CNAB
        </h2>
    </header>
    <div class="widget-body no-padding no-margin">
        @if (Model != null && Model.Any())
        {
            <table id="datatable_detalhes_cnab no-margin" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar Número Documento" />
                        </th>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar Nome do Cliente" />
                        </th>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar CPF/CNPJ" />
                        </th>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar Valor" />
                        </th>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar Status" />
                        </th>
                    </tr>
                    <tr>
                        <th>
                            Número Documento
                        </th>
                        <th>
                            Nome do Cliente
                        </th>
                        <th>
                            CPF/CNPJ
                        </th>
                        <th>
                            Valor
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NumeroDocumento.ToString().PadLeft(6, '0')</td>
                            <td>@item.NomeCliente</td>
                            <td>@item.CpfCnpj</td>
                            <td>@string.Format("R$ {0:C}", item.Valor)</td>
                            <td>@item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <table id = "datatable_fixed_column" class="table table-striped table-bordered" style="width:100%">
                <tr>
                    <td>
                        Nenhum lançamento de cobrança foi encontrado.
                    </td>
                </tr>
            </table>
        }
    </div>
</div>