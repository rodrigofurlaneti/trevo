@model List<Aplicacao.ViewModels.LeituraCNABViewModel>
@{
    Layout = null;
}

<div class="row no-margin-bottom">
    <div class="widget-body no-padding no-margin">
        @if (Model != null && Model.Any())
        {
            <table id="datatable_grid_cnab" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar Número CNAB" />
                        </th>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar Data de Envio" />
                        </th>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar Unidade" />
                        </th>
                        <th class="hasinput">
                            <input type="text" class="form-control" placeholder="Filtrar Valor Total" />
                        </th>
                        <th></th>
                    </tr>
                    <tr>
                        <th>
                            Número CNAB
                        </th>
                        <th>
                            Data de Envio
                        </th>
                        <th>
                            Unidade
                        </th>
                        <th>
                            Valor Total
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.NumeroCNAB</td>
                            <td>@m.DataInsercao.ToShortDateString()</td>
                            <td>@m.Unidade</td>
                            <td>@m.ValorTotal.ToString("C")</td>
                            <td align="center"><button class="btn btn-primary visualizar-cnab" onclick="DetalhesCNAB(@m.Id)">Visualizar</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <table id="datatable_fixed_column" class="table table-striped table-bordered" style="width:100%">
                <tr>
                    <td>
                        Nenhum CNAB foi encontrado.
                    </td>
                </tr>
            </table>
        }
    </div>
</div>