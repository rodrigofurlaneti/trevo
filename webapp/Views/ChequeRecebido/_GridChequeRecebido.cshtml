
@model List<Aplicacao.ViewModels.ChequeRecebidoViewModel>


<div class="widget-body">
    <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
        <thead>
            <tr>
                <th class="hasinput" style="width: 18%">
                    <input type="text" class="form-control" placeholder="Filtrar Conta Financeira" />
                </th>
                <th class="hasinput" style="width: 18%">
                    <input type="text" class="form-control" placeholder="Filtrar Unidade" />
                </th>
                <th class="hasinput" style="width: 18%">
                    <input type="text" class="form-control" placeholder="Filtrar Tipo de Serviço" />
                </th>
                <th class="hasinput" style="width: 10%">
                    <input type="text" class="form-control" placeholder="Filtrar Valor Total" />
                </th>
                <th class="hasinput" style="width: 10%">
                    <input type="text" class="form-control" placeholder="Filtrar Data Geração" />
                </th>
                <th class="hasinput" style="width: 15%">
                    <input type="text" class="form-control" placeholder="Filtrar Data Vencimento" />
                </th>
                <th class="hasinput" style="max-width: 120px; min-width: 120px; width: 1%;" rowspan="1" colspan="1">
                </th>
            </tr>
            <tr>
                <th data-hide="expand">Conta Financeira</th>
                <th data-hide="expand">Unidade</th>
                <th data-hide="expand">Tipo de Serviço</th>
                <th data-hide="expand">Valor Total</th>
                <th data-hide="expand">Data Geração</th>
                <th data-hide="expand">Data Vencimento</th>
                <th data-class="expand">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var m in Model)
                {
                    foreach (var item in m.ListaLancamentoCobranca)
                    {
                        <tr>
                            <td>@item.ContaFinanceira.Conta</td>
                            <td>@item.Unidade.Nome</td>
                            <td>@item.TipoServico</td>
                            <td>@item.ValorContrato</td>
                            <td>@item.DataGeracao.ToString("yyyy-MM-dd")</td>
                            <td>@item.DataVencimento.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a class="btn btn-primary" href="/ChequeRecebido/edit/@m.Id"><i class='fa fa-edit'></i></a>
                                <a class="btn btn-danger" href="/ChequeRecebido/delete/@m.Id"><i class="fa fa-remove"></i></a>
                            </td>
                        </tr>
                    }

                }
            }
        </tbody>
    </table>
</div>


