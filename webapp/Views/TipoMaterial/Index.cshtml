@model Aplicacao.ViewModels.TipoMaterialViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pagespecific{
    @Styles.Render("~/content/css/shared/menu-administrativo-config.css")
    @Styles.Render("~/Content/bootstrap/datepicker/bootstrap-datepicker.css")
    @Styles.Render("~/Scripts/plugin/chosen_v1.8.2/chosen.css")
    @Scripts.Render("~/Scripts/plugin/chosen_v1.8.2/chosen.jquery.js")
    @Scripts.Render("~/Scripts/jquery.moneymask.js")
    @Scripts.Render("~/Scripts/funcoes-uteis.js")
    @Scripts.Render("~/Scripts/TipoMaterial/tipo-material.js")
}

<div id="content">
    <div>
        <section id="widget-grid" class="">
            <div class="row">
                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget" id="wid-id-2" data-widget-editbutton="false" data-widget-deletebutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-list-alt"></i> </span>
                            <h2>
                                Tipo Material
                            </h2>
                        </header>
                        <div>
                            <div class="widget-body">
                                @using (Html.BeginForm("SalvarDados", "TipoMaterial", FormMethod.Post, new { id = "tipo-material-form" }))
                                {
                                    @Html.HiddenFor(x => x.Id)

                                    <div id="conteudo" class="row">
                                        <div class="col-xs-12">
                                            <div class="col-xs-12">
                                                <div class="row">
                                                    <div class="col-xs-12 col-md-4">
                                                        <label>Descrição: </label>
                                                        @Html.TextBoxFor(x => x.Descricao, htmlAttributes: new { @id = "descricao", @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-actions">
                                        <button id="salvar" type="submit" class="btn btn-lg btn-primary" value="SalvarDados" name="SalvarDados">Salvar</button>
                                        <a id="cancelar" href="/TipoMaterial/Index" class="btn btn-lg btn-danger" value="CancelarPedido" name="CancelarPedido">Cancelar</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </article>
            </div>


            <div id="lista-tipo-material">
            </div>

        </section>
    </div>
</div>