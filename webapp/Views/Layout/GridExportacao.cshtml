@model IEnumerable<LayoutViewModel>

<section id="widget-grid" class="">
    <div class="row no-margin-bottom">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding">
            <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>Lista de Layouts</h2>
                </header>
                <div>
                    <div class="jarviswidget-editbox">
                    </div>
                    <div class="widget-body no-padding">
                        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
                            <thead>
                                <tr>
                                    <th class="hasinput">
                                        <input type="text" class="form-control" placeholder="Filtrar Id" />
                                    </th>
                                    <th class="hasinput">
                                        <input type="text" class="form-control" placeholder="Filtrar Nome do Layout" />
                                    </th>
                                    <th class="hasinput">
                                        <input type="text" class="form-control" placeholder="Filtrar Qtd. de Formatos"/>
                                    </th>
                                    <th class="hasinput">
                                        <input type="text" class="form-control" placeholder="Filtrar Data de Geração"/>
                                    </th>
                                    <th class="hasinput">
                                    </th>
                                </tr>
                                <tr>
                                    <th data-hide="phone">Id:</th>
                                    <th data-hide="phone">Nome do Layout: </th>
                                    <th data-hide="phone">Qtd. de Formatos: </th>
                                    <th data-hide="phone">Data de Geração: </th>
                                    <th data-class="expand">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var m in Model)
                                    {
                                        <tr>
                                            <td>@m.Id</td>
                                            <td>@m.Nome</td>
                                            <td>@m.QuantidadeFormatos</td>
                                            <td>@m.DataInsercao</td>
                                            <td>
                                                <a class="btn btn-primary" href="/Layout/EditExportacao/@m.Id"><i class='fa fa-edit'></i></a>
                                                <a class="btn btn-danger" onclick="DeletarExportacao(@m.Id)"><i class="fa fa-remove"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>
