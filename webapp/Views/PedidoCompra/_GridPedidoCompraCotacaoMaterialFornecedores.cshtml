@model List<PedidoCompraCotacaoMaterialFornecedorViewModel>

<div class="jarviswidget jarviswidget-color-blueDark no-margin-bottom" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
    <div style="border:none">
        <div class="widget-body">
            <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Fornecedor</th>
                        <th>Material</th>
                        <th>Quantidade</th>
                        <th>Valor Unitário</th>
                        <th>Valor Total</th>
                        <th>Selecionar</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CotacaoMaterialFornecedor.Fornecedor.Nome</td>
                                <td>@item.CotacaoMaterialFornecedor.Material.Nome</td>
                                <td>@item.CotacaoMaterialFornecedor.Quantidade</td>
                                <td>@item.CotacaoMaterialFornecedor.Valor</td>
                                <td>@item.CotacaoMaterialFornecedor.ValorTotal</td>
                                <td>
                                    <div class="col-xs-12 nopadding input-group">
                                        <input type="checkbox" onChange="AlterarStatusDoItem(this, @item.CotacaoMaterialFornecedor.Id)" class="form-control center-block no-float select-item" @(item.Selecionado ? "checked" : null)>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>