@using Core.Extensions
@using Entidade
@using Entidade.Uteis
@using Portal.Controllers

@model CalculoFechamentoViewModel

@{

    var controller = ViewContext.Controller as CalculoFechamentoController;
}


<div id="conteudo" class="row margin-bottom-5">
    <div class="col-xs-12 no-padding margin-bottom-10">
        <div class="col-xs-12 col-sm-12">
            <div id="divDespesa">
                <div class="col-lg-12">
                    <div class="col-xs-12">
                        <table id="tbDespesa" class="col-xs-12">
                            <thead>
                                <tr>
                                    <th style="width: 20%;"><h4><b>Despesa Inicial(R$)</b></h4></th>
                                    <th style="width: 20%;"><h4><b>Despesa Final(R$)</b></h4></th>
                                    <th style="width: 20%;"><h4><b>Faturamento Inicial(R$)</b></h4></th>
                                    <th style="width: 20%;"><h4><b>Faturamento Final(R$)</b></h4></th>
                                    <th style="width: 20%;"><h4><b>Notas Para Emissão(R$)</b></h4></th>
                                </tr>
                            </thead>
                            <tbody class="dynamicInputs">
                                <tr id="linhaFechamento">
                                    <td>
                                        <h5>
                                            @Html.TextBoxFor(x => x.AjusteFaturamento.ConsolidaDespesa.DespesaTotal,new {
                                           @id = "DespesaTotal",
                                           @readonly = "readonly",
                                           @style= "border: none;margin-left: 25px;"
                                       })
                                        </h5>
                                    </td>
                                    <td>
                                        <h5>


                                            @Html.TextBoxFor(x => x.AjusteFaturamento.ConsolidaDespesa.DespesaValorFinal,new {
                                           @id = "DespesaValorFinal",
                                           @readonly = "readonly",
                                           @style = "border: none;margin-left: 25px;"
                                       })
                                        </h5>
                                    </td>
                                    <td>
                                        <h5>
                                            @Html.TextBoxFor(x => x.AjusteFaturamento.ConsolidaFaturamento.FaturamentoMes,new {
                                           @id= "FaturamentoMes",
                                           @readonly = "readonly",
                                           @style = "border: none;margin-left: 44px;"
                                       })
                                        </h5>
                                    </td>
                                    <td>
                                        <h5>
                                            @Html.TextBoxFor(x => x.AjusteFaturamento.ConsolidaFaturamento.FaturamentoFinal,new {
                                           @id = "FaturamentoFinal",
                                           @readonly = "readonly",
                                           @style = "border: none;margin-left: 44px;"
                                       })
                                        </h5>
                                    </td>
                                    <td>
                                        <h5>
                                            @Html.TextBoxFor(x => x.ValorNotaEmissao, new {
                                           @id = "ValorNotaEmissao",
                                           @readonly = "readonly",
                                           @style = "border: none;margin-left: 44px;"
                                       })
                                        </h5>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="col-xs-12 col-sm-12">
                        <div class="col-xs-12">
                            &nbsp;
                        </div>
                        <div class="col-xs-12">
                            &nbsp;
                        </div>
                        <div class="col-xs-12">
                            &nbsp;
                        </div>
                    </div>
                    <div>
                        @Html.CheckBoxFor(x => x.PrefeituraMaiorIgualCartao, new {
                       @id = "PrefeituraMaiorIgualCartao",
                       @disabled = "disabled"
                   })
                        <label><h5>Faturamento Total maior ou igual ao Faturamento de Cartões</h5></label>
                    </div>
                    <div>
                        @Html.CheckBoxFor(x => x.ValorComplementarEmitido, new {
                       @id = "ValorComplementarEmitido",
                       @disabled = "disabled"
                   })
                        <label><h5>Valor Complementar de Notas Ficais Emitido</h5></label>
                    </div>
                    <div>
                        @Html.CheckBoxFor(x => x.PrefeituraComplementarMaiorIgualDespesa, new {
                       @id = "PrefeituraComplementarMaiorIgualDespesa",
                       @disabled = "disabled"
                   })
                        <label><h5>Faturamento na Prefeitura + Valor Complementar maior ou igual a Despesa</h5></label>
                    </div>
                </div>

            </div>
        </div>


    </div>

</div>


<div class="row margin-bottom-5">
    <div class="pull-right margin-right-15">
        <a class="btn btn-lg btn-danger" href="/calculofechamento/index">&nbsp;Cancelar</a>
    </div>
    <div class="pull-right margin-right-15">
        @*<a id="btnEnviarDespesa" onclick="RealizarFechamento()" class="btn btn-lg btn-primary">&nbsp;Realizar Fechamento</a>*@
        <button id="btnEnviarDespesa" type="submit" class="btn btn-lg btn-primary">&nbsp;Realizar Fechamento</button>
    </div>
    <div class="pull-right margin-right-15">
        <a class="btn btn-lg btn-success" onclick="InformarValorComplementar()">&nbsp;Informar Valor Complementar</a>
    </div>
</div>


