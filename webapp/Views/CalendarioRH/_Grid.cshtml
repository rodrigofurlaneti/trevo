@using Core.Extensions;

@model List<CalendarioRHViewModel>

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Lista de Registros</h2>
            </header>

            <div>
                <div class="widget-body no-padding">
                    <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%" style="margin-top: 0px !important">
                        <thead>
                            <tr>
                                <th class="hasinput">
                                    <input type="text" class="form-control" placeholder="Filtrar Data" />
                                </th>
                                <th class="hasinput">
                                    <input type="text" class="form-control" placeholder="Filtrar Descrição" />
                                </th>
                                <th class="hasinput">
                                    <input type="text" class="form-control" placeholder="Filtrar Data Fixa" />
                                </th>
                                <th class="hasinput">
                                    <input type="text" class="form-control" placeholder="Filtrar Unidades" />
                                </th>
                                <th class="hasinput">
                                    <input type="text" class="form-control" placeholder="Filtrar Todas Unidades" />
                                </th>
                                <th class="hasinput" style="width: 120px">
                                </th>
                            </tr>
                            <tr>
                                <th>Data</th>
                                <th>Descrição</th>
                                <th>Data Fixa</th>
                                <th>Unidades</th>
                                <th>Todas Unidades</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Data.ToShortDateString()</td>
                                    <td>@item.Descricao</td>
                                    <td>@(item.DataFixa ? "Sim" : "Não")</td>
                                    <td>@(string.Join("; ", item.CalendarioRHUnidades?.Select(x => x.Unidade?.Nome)))</td>
                                    <td>@(item.TodasUnidade ? "Sim" : "Não")</td>
                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("edit", new {item.Id})"><i class='fa fa-edit'></i></a>
                                        <a class="btn btn-danger" href="@Url.Action("delete", new {item.Id})"><i class="fa fa-remove"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </article>
</div>