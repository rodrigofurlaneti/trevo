@model List<TabelaPrecoAvulsoHoraValorViewModel>

@if (Model != null && Model.Any())
{
    <table id="datatable_fixed_column" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th data-hide="phone">Hora</th>
                <th data-hide="phone">Valor</th>
                <th data-hide="phone">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
            <tr>
                <td>@m.Hora</td>
                <td>@m.Valor</td>
                <td class="text-center">
                    <div class="pull-left">
                        <a href="javascript:void(0);" class="btn btn-primary" onclick="editarHoraValor(@m.Id)"><i class='fa fa-edit'></i></a>
                        <a href="javascript:void(0);" class="btn btn-danger" onclick="excluirHoraValor(@m.Id)"><i class='fa fa-remove'></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <table id="datatable_fixed_column" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr><td></td></tr>
        </thead>
        <tbody>
            <tr>
                <td align="center">
                    Nenhum registro foi encontrado.
                </td>
            </tr>
        </tbody>
    </table>
}