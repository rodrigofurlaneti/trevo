@model List<TabelaPrecoAvulsoHoraValorViewModel>

<table id="gridHoraValor" class="table table-striped table-bordered" style="width: 100%;">
    <thead>
        <tr>
            <th data-hide="phone">Hora</th>
            <th data-hide="phone">Valor</th>
            <th data-hide="phone">Ação</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var m in Model)
            {
                <tr>
                    <td class="coluna-hora">@m.Hora</td>
                    <td class="coluna-valor-hora">@Convert.ToDecimal(m.Valor).ToString("C2")</td>
                    <td class="text-center">
                        <div class="pull-left">
                            <input type="hidden" class="hora" value="@m.Hora">
                            <input type="hidden" class="valor" value="@m.Valor">
                            <a href="javascript:void(0);" class="btn btn-primary" onclick="editarHoraValor('@m.Hora', '@m.Valor')"><i class='fa fa-edit'></i></a>
                            <a href="javascript:void(0);" class="btn btn-danger" onclick="excluirHoraValor('@m.Hora')"><i class='fa fa-remove'></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td align="center" colspan="3">
                    Nenhum registro foi encontrado.
                </td>
            </tr>
        }
    </tbody>
</table>