@model List<ContratoMensalistaViewModel>

<div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-deletebutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>Contrato de Mensalista</h2>
            </header>
            <div>
                <div class="widget-body no-padding">
                    
                    @Html.Partial("~/Views/Shared/_PaginacaoGenericaAjax.cshtml")

                    <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th data-hide="phone">Contrato: </th>
                                <th data-hide="phone">Cliente: </th>
                                <th data-hide="phone">Unidade: </th>
                                <th data-hide="phone">Data Fim: </th>
                                <th data-hide="phone">Nº Vagas: </th>
                                <th data-hide="phone">Valor: </th>
                                <th data-hide="phone">Dia Vencimento: </th>
                                <th data-class="expand">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var m in Model)
                                {

                                    var status = m.Ativo == true ? "Ativo" : "Não";

                                    <tr>
                                        <td>@m.NumeroContrato</td>
                                        <td>@(m.Cliente.NomeExibicao)</td>
                                        <td>@(m.Unidade != null ? m.Unidade.Nome : "Incosistente")</td>
                                        <td>@(m.DataFim == null ? null : @m.DataFim.Value.ToString("yyyy-MM-dd HH:mm:ss"))</td>
                                        <td>@m.NumeroVagas</td>
                                        <td>@m.ValorReais</td>
                                        <td>@m.DataVencimento.Day</td>
                                        <td>
                                            <a class="btn btn-primary" href="/contratomensalista/edit/@m.Id"><i class='fa fa-edit'></i></a>
                                            <a class="btn btn-danger" href="/contratomensalista/delete/@m.Id"><i class="fa fa-remove"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    @Html.Partial("~/Views/Shared/_PaginacaoGenericaAjax.cshtml")

                </div>
            </div>
        </div>
    </article>
</div>