@using Portal.Controllers
@using Entidade.Uteis
@model List<HorarioParametroEquipeViewModel>


@{
    var controller = ViewContext.Controller as ParametroEquipeController;
}


<div id="container-tables" style="margin-top:50px;">
    @if (Model != null && Model.Any())
    {
        <h3>Horários e Unidades</h3>
        <div class="col-lg-3 table-mensalista">
            <h3 class="nomeFuncionamento"></h3>
            <div class="col-xs-3">
                <table id="teste" class="table table-hover">

                    <thead>
                        <tr>
                            <th data-hide="expand"></th>
                            <th data-hide="expand"></th>
                            <th data-hide="expand"></th>
                            <th data-hide="expand"></th>
                            <th data-hide="expand"></th>
                            <th data-hide="expand"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var horarioPreco in Model)
                        {

                            <tr>
                                @*style="border: solid; border-color: lightgray ">*@

                                @*<td><input name="equipamento" type="text" id="@horarioPreco.Id" class="horario" value="@horarioPreco.Unidade.Id" placeholder="equipamento" /></td>*@
                                @*<td>@Html.DropDownListFor(x => @horarioPreco.Unidade.Id, new SelectList(controller.ListaUnidade, "Id", "Nome"), "Selecione...", new { @id = "unidade", @class = "chosen-select form-control", data_placeholder = "Selecione..." })</td>*@
