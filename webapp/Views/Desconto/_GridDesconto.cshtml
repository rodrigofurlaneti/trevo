@model List<Aplicacao.ViewModels.DescontoViewModel>
<div class="widget-body">
    @if (Model != null && Model.Any())
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th class="hasinput" style="width: 30%">
                        <input type="text" class="form-control" placeholder="Filtrar Descrição" />
                    </th>
                    <th class="hasinput" style="width: 18%">
                        <input type="text" class="form-control" placeholder="Filtrar Tipo Desconto" />
                    </th>
                    <th class="hasinput" style="width: 15%">
                        <input type="text" class="form-control" placeholder="Filtrar Valor" />
                    </th>
                    <th class="hasinput" style="width: 20%">
                        <input type="text" class="form-control" placeholder="Filtrar Necessita Aprovação" />
                    </th>
                    <th class="hasinput" style="max-width: 120px; min-width: 120px; width: 1%;" rowspan="1" colspan="1">
                    </th>
                </tr>
                <tr>
                    <th data-hide="expand">Descrição</th>
                    <th data-hide="expand">Tipo Desconto</th>
                    <th data-hide="expand">Valor</th>
                    <th data-hide="expand">Necessita Aprovação</th>
                    <th data-class="expand">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        @{ 
                            string valor = string.Format("{0:0.00}", Convert.ToDouble(m.Valor));

                        }
                        <td>@m.Descricao</td>
                        <td>@(m.TipoDesconto == Entidade.Uteis.TipoDesconto.Monetario  ? "Monetário" : "Percentual")</td>
                        <td>@valor</td>
                        <td>@(m.NecessitaAprovacao == true ? "Sim" : "Não")</td>
                        <td>
                            <a class="btn btn-primary" href="/Desconto/edit/@m.Id"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-danger" href="/Desconto/delete/@m.Id"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <tr>
                <td>
                    Nenhuma Negociação de Desconto encontrada.
                </td>
            </tr>
        </table>

    }
</div>

